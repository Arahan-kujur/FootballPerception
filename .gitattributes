# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Jupyter Notebook
*.ipynb text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Git attributes
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.pt binary
*.pth binary
*.onnx binary
*.mp4 binary
*.avi binary
*.mov binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary

